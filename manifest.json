{
    "manifest_version": 3,
    "name": "Job Description Scraper",
    "version": "1.0",
    "description": "Scrapes job descriptions from job boards",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ]
  }